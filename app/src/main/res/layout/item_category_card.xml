<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="14dp"
    app:cardBackgroundColor="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <View
            android:id="@+id/category_color_box"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:background="#B3FFD9" />

        <TextView
            android:id="@+id/text_category_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Example Category"
            android:textSize="16sp"
            android:textColor="@color/textPrimary" />

        <ImageButton
            android:id="@+id/button_edit_category"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_edit_pink"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/accent"
            android:contentDescription="Edit category"
            android:padding="4dp" />

        <ImageButton
            android:id="@+id/button_delete_category"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_delete_pink"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/accent"
            android:contentDescription="Delete category"
            android:padding="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
