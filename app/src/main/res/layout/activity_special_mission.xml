<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="100dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/cardBackground"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/missionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/bossHPText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boss HP: --"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/textSecondary" />

                <ProgressBar
                    android:id="@+id/bossProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/accent" />

                <TextView
                    android:id="@+id/membersCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members: --"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/textSecondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startMissionButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Start Special Mission (Leader Only)"
                    android:textAllCaps="false"
                    app:cornerRadius="28dp"
                    android:backgroundTint="@color/accent"
                    android:textColor="@color/textWhite" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/storeButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Store Purchase (-2 HP, max 5)"
                        android:textAllCaps="false"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bossHitButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Successful Boss Hit (-2 HP, max 10)"
                        android:textAllCaps="false"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/easyTaskButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Complete Easy Task (-2 HP, max 10)"
                        android:textAllCaps="false"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/normalTaskButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Complete Normal Task (-2 HP, max 10)"
                        android:textAllCaps="false"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/importantTaskButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Complete Important Task (-1 HP, max 10)"
                        android:textAllCaps="false"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/otherTaskButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Complete Other Task (-4 HP, max 6)"
                        android:textAllCaps="false"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/noUnfinishedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="No Unfinished Tasks (once, -10 HP)"
                        android:textAllCaps="false"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/msgButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Send Alliance Message (demo: 1/min, -4 HP)"
                        android:textAllCaps="false"
                        android:layout_marginTop="6dp" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Players progress (live)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <LinearLayout
                    android:id="@+id/playersLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
