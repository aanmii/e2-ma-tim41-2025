<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 🏪 Naslov -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏪 Prodavnica"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="16dp" />

        <!-- 🥤 Napici -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🥤 Napici"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="8dp" />

        <include layout="@layout/item_shop_card" android:id="@+id/item_potion1" />
        <include layout="@layout/item_shop_card" android:id="@+id/item_potion2" />
        <include layout="@layout/item_shop_card" android:id="@+id/item_potion3" />
        <include layout="@layout/item_shop_card" android:id="@+id/item_potion4" />

        <!-- 🧥 Odeća -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🧥 Odeća"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <include layout="@layout/item_shop_card" android:id="@+id/item_gloves" />
        <include layout="@layout/item_shop_card" android:id="@+id/item_boots" />
        <include layout="@layout/item_shop_card" android:id="@+id/item_shield" />

        <!-- ⚔️ Oružje -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚔️ Oružje"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <include layout="@layout/item_shop_card" android:id="@+id/item_bow" />
        <include layout="@layout/item_shop_card" android:id="@+id/item_sword" />

    </LinearLayout>
</ScrollView>
